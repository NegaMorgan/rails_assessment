<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<!-- render the form partial for the comment object
     make sure it has access to Comment.new -->

<%= render :partial => "comments/form", :locals => { :post_id => @post.id, :comment => @comment } %>


    <% @post.comments.each do |comment| %>
      <p>
        <strong><%= comment.title %></strong>
        <span><%= link_to 'X', comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %></span>
        <br />
        <%= comment.content %>
      </p>
    <% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
